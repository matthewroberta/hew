%h1= t('settings')

= simple_form_for current_user, url: update_profile_settings_path do |f|
  = f.error_notification

  .form-group
    %label= t('first_name')
    = f.input :first_name, class: 'form-control', label: false
  .form-group
    %label= t('last_name')
    = f.input :last_name, class: 'form-control', label: false
  .form-group
    %label Language
    = f.input :locale, collection: [[t(:english), 'en'], [t(:spanish), 'es']], label: false
  = f.button :submit, t('save'), class: 'btn btn-primary'
