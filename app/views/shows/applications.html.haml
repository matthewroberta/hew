.row
  .col-lg-10.mx-auto
    .card
      .card-body
        %h4.text-center Submissions: #{ @show.name }

        %ul.nav.nav-tabs
          %li.nav-item
            %a.nav-link{ href: show_applications_path(@show, fresh: true), class: curator_application_status_scope == :fresh ? 'active' : '' }
              Fresh (#{ @show.applications.fresh.count })
          %li.nav-item
            %a.nav-link{ href: show_applications_path(@show, accepted: true), class: curator_application_status_scope == :accepted ? 'active' : '' }
              Accepted (#{ @show.applications.accepted.count })
          %li.nav-item
            %a.nav-link{ href: show_applications_path(@show, maybe: true), class: curator_application_status_scope == :maybe ? 'active' : '' }
              Maybe (#{ @show.applications.maybe.count })
          %li.nav-item
            %a.nav-link{ href: show_applications_path(@show, rejected: true), class: curator_application_status_scope == :rejected ? 'active' : '' }
              Rejected (#{ @show.applications.rejected.count })

      - if @applications.none?
        .row
          .col-10.mx-auto.mb-4
            %p.text-muted No applications here.

      - @applications.each do |show_application|
        .row
          .col-10.mx-auto.mb-4
            .card
              .card-header
                .pull-left= show_application.user.full_name
                .pull-right
                  = link_to 'Accept', update_show_application_status_path(@show, show_application, { 'status_id' => ShowApplication.status_ids[:accepted], curator_application_status_scope.to_s => true }), class: 'btn btn-default btn-success', method: :patch
                  = link_to 'Maybe', update_show_application_status_path(@show, show_application, { 'status_id' => ShowApplication.status_ids[:maybe], curator_application_status_scope.to_s => true }), class: 'btn btn-default btn-warning', method: :patch
                  = link_to 'Reject', update_show_application_status_path(@show, show_application, { 'status_id' => ShowApplication.status_ids[:rejected], curator_application_status_scope.to_s => true }), class: 'btn btn-default btn-danger', method: :patch
              .card-body
                .row.text-center.mb-4
                  .col-3= link_to 'Website', '#'
                  .col-3= link_to 'Photos', '#'
                  .col-3= link_to 'Instagram', '#'
                  .col-3= link_to 'Extras', '#'

                .row
                  .col-md-10.mx-auto
                    .blockquote= show_application.artist_statement.html_safe
                    %footer.blockquote-footer= show_application.user.full_name
